{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "module": "es6",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es5",
    "allowJs": true,
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "configFile": "tslint.json"
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
